<div class="flex items-center justify-center min-h-screen">

  <div class="flex flex-wrap justify-center gap-6 p-4">
    <!-- Card 1 -->
    <%= link_to links_path, class: 'w-full max-w-xs bg-white shadow-lg rounded-lg overflow-hidden group hover:bg-indigo-500 transition-all duration-300' do %>
      <div class="flex items-center justify-center my-8 group-hover:text-white">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-20 group-hover:text-white">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 0 1 1.242 7.244l-4.5 4.5a4.5 4.5 0 0 1-6.364-6.364l1.757-1.757m13.35-.622 1.757-1.757a4.5 4.5 0 0 0-6.364-6.364l-4.5 4.5a4.5 4.5 0 0 0 1.242 7.244" />
        </svg>
      </div>
      <div class="px-4 pb-4 text-center group-hover:text-white">
        <h2 class="text-lg font-semibold mb-2">View links</h2>
      </div>
    <% end %>

    <%= link_to '#', class: 'w-full max-w-xs bg-white shadow-lg rounded-lg overflow-hidden group hover:bg-indigo-500 transition-all duration-300' do %>
      <div class="flex items-center justify-center my-8 group-hover:text-white">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-20">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 0 1 3 19.875v-6.75ZM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V8.625ZM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V4.125Z" />
        </svg>
      </div>
      <div class="px-4 pb-4 text-center group-hover:text-white">
        <h2 class="text-lg font-semibold mb-2">View statistic</h2>
      </div>
    <% end %>

    <%= link_to new_link_path, class: 'w-full max-w-xs bg-white shadow-lg rounded-lg overflow-hidden group hover:bg-indigo-500 transition-all duration-300' do %>
      <div class="flex items-center justify-center my-8 group-hover:text-white">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-20">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
      </div>
      <div class="px-4 pb-4 text-center group-hover:text-white">
        <h2 class="text-lg font-semibold mb-2">Create new link</h2>
      </div>
    <% end %>
  </div>

</div>